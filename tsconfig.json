{
	"compilerOptions": {
		"target": "es2015",
		"module": "esnext",
		"jsx": "react",
		"sourceMap": false,
		"outDir": "dist",
		"strict": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationDir": "types",
		"emitDeclarationOnly": true,
		"rootDir": "./src"
	}
}
